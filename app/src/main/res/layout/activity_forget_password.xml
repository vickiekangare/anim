<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stock"
    tools:context=".ForgetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#9fff">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#000"
            android:text="Enter OTP" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#808080"
            android:text="Please Enter the OTP that has" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#808080"
            android:text="been sent to your mobile number" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:gravity="center"
            android:maxLength="6"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textColor="#808080"
            android:text="Enter your 6 Digit OTP" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#808080"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:text="Did not receive OTP" />
        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="#0000EE"/>

        <Button
            android:id="@+id/btnLogIn"
            style="@style/btnStyle"
            android:layout_width="160dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_back_style"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:elevation="5dp"
            android:text="Verify" />

    </LinearLayout>
</LinearLayout>