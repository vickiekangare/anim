<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/stock"

    tools:context=".AdharCardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#9fff">


        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:text="Please enter your Aadhar Card" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#000"
            android:textSize="16sp"
            android:text="number to begin your loan process" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#000"
            android:textSize="16sp"
            android:text="OTP will send registered" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#000"
            android:textSize="16sp"
            android:text="Mobile number" />

        <EditText
            android:id="@+id/etAdharCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:maxLength="12"
            android:inputType="number" />
        <Button
            android:id="@+id/btnLogIn"
            style="@style/btnStyle"
            android:onClick="next"
            android:background="@drawable/btn_back_style"
            android:layout_marginTop="30dp"
            android:elevation="5dp"
            android:text="Next" />
    </LinearLayout>
</LinearLayout>